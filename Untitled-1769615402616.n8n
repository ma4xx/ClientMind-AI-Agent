{
  "name": "ClientMind Email Auto-Reply Workflow",
  "nodes": [
    {
      "parameters": {
        "pollTimes": {
          "item": [
            {
              "mode": "everyMinute"
            }
          ]
        },
        "filters": {
          "labelIds": [
            "INBOX",
            "UNREAD"
          ]
        }
      },
      "id": "gmail-trigger",
      "name": "Gmail Trigger",
      "type": "n8n-nodes-base.gmailTrigger",
      "typeVersion": 1,
      "position": [
        460,
        300
      ]
    },
    {
      "parameters": {
        "model": "gpt-4o-mini",
        "options": {
          "temperature": 0.3
        },
        "prompt": "Analyze the following email and determine if it is a customer inquiry that requires a response.\n\nSubject: {{ $json.Subject }}\nBody: {{ $json.snippet }}\n\nReturn ONLY a JSON object with this format:\n{\n  \"is_inquiry\": boolean,\n  \"reason\": string\n}"
      },
      "id": "intent-classifier",
      "name": "Intent Classifier",
      "type": "n8n-nodes-base.openAi",
      "typeVersion": 1,
      "position": [
        680,
        300
      ],
      "credentials": {
        "openAiApi": {
          "id": "openai-creds",
          "name": "OpenAI Account"
        }
      }
    },
    {
      "parameters": {
        "conditions": {
          "boolean": [
            {
              "value1": "={{ JSON.parse($json.message.content).is_inquiry }}",
              "value2": true
            }
          ]
        }
      },
      "id": "check-intent",
      "name": "Is Inquiry?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [
        900,
        300
      ]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://localhost:3000/api/rag/dual",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "customer_email",
              "value": "={{ $('Gmail Trigger').item.json.From.match(/<(.+)>/)?.[1] || $('Gmail Trigger').item.json.From }}"
            },
            {
              "name": "query_text",
              "value": "={{ $('Gmail Trigger').item.json.Subject }} {{ $('Gmail Trigger').item.json.snippet }}"
            },
            {
              "name": "top_k",
              "value": 3
            }
          ]
        },
        "options": {}
      },
      "id": "dual-rag",
      "name": "Dual-RAG Search",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        1120,
        200
      ]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://localhost:3000/api/draft/generate",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "email.email_id",
              "value": "={{ $('Gmail Trigger').item.json.id }}"
            },
            {
              "name": "email.subject",
              "value": "={{ $('Gmail Trigger').item.json.Subject }}"
            },
            {
              "name": "email.body",
              "value": "={{ $('Gmail Trigger').item.json.snippet }}"
            },
            {
              "name": "email.from",
              "value": "={{ $('Gmail Trigger').item.json.From.match(/<(.+)>/)?.[1] || $('Gmail Trigger').item.json.From }}"
            },
            {
              "name": "memory",
              "value": "={{ $json.data.memory }}"
            },
            {
              "name": "knowledge",
              "value": "={{ $json.data.knowledge }}"
            },
            {
              "name": "persona_config.tone",
              "value": "friendly"
            },
            {
              "name": "persona_config.agent_name",
              "value": "ClientMind Agent"
            }
          ]
        },
        "options": {}
      },
      "id": "generate-draft",
      "name": "Generate Draft",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        1340,
        200
      ]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://localhost:3000/api/draft/hold",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "draft_id",
              "value": "={{ $('Generate Draft').item.json.data.draft_id }}"
            },
            {
              "name": "n8n_callback_url",
              "value": "={{ $execution.resumeUrl }}"
            },
            {
              "name": "email_id",
              "value": "={{ $('Gmail Trigger').item.json.id }}"
            },
            {
              "name": "customer_email",
              "value": "={{ $('Gmail Trigger').item.json.From.match(/<(.+)>/)?.[1] || $('Gmail Trigger').item.json.From }}"
            },
            {
              "name": "subject",
              "value": "={{ $('Gmail Trigger').item.json.Subject }}"
            }
          ]
        },
        "options": {}
      },
      "id": "save-callback",
      "name": "Save Callback",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        1560,
        320
      ]
    },
    {
      "parameters": {},
      "id": "wait-approval",
      "name": "Wait for Approval",
      "type": "n8n-nodes-base.wait",
      "typeVersion": 1,
      "position": [
        1560,
        200
      ],
      "webhookId": "approval-webhook"
    },
    {
      "parameters": {
        "method": "POST",
        "url": "http://localhost:3000/api/draft/approve",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "draft_id",
              "value": "={{ $('Generate Draft').item.json.data.draft_id }}"
            },
            {
              "name": "approved_by",
              "value": "admin"
            },
            {
              "name": "n8n_callback_url",
              "value": "={{ $execution.resumeUrl }}"
            }
          ]
        },
        "options": {}
      },
      "id": "approve-send",
      "name": "Approve & Send",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.1,
      "position": [
        1780,
        200
      ]
    }
  ],
  "connections": {
    "Gmail Trigger": {
      "main": [
        [
          {
            "node": "Intent Classifier",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Intent Classifier": {
      "main": [
        [
          {
            "node": "Is Inquiry?",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Is Inquiry?": {
      "main": [
        [
          {
            "node": "Dual-RAG Search",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Dual-RAG Search": {
      "main": [
        [
          {
            "node": "Generate Draft",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Generate Draft": {
      "main": [
        [
          {
            "node": "Wait Approval",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Wait Approval": {
      "main": [
        [
          {
            "node": "Approve & Send",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "settings": {
    "executionOrder": "v1"
  },
  "staticData": null,
  "pinData": {}
}
